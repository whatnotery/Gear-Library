
<h2><%= @user.full_name %></h2>
<% if @user.avatar.present? %>
    <img src="<%= (url_for(@user.avatar)) %>"><br>
<% end %>
<p><%=mail_to @user.email %>  
<%if @user.phone.present?%>
//// <%=link_to @user.phone, "tel:#{@user.phone}" %>  
<% end %>
<% if @user.social_media.present?%>
//// <%=link_to 'Social Media', @user.social_media %></p>
<% end %>
<p><%= @user.bio %></p>

<% @user.gear_items.each do |item| %>
    <div>
   <p> <%=link_to item.name, gear_item_path(:id => item.id) %></p>
 
    </div>
  <% end %>

<ul>
<% if @user.id == current_user.id%>
  <li><%= link_to "Edit", edit_user_path(@user) %></li>
  <% end %>
</ul>