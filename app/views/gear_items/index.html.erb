<p style="color: green"><%= notice %></p>

<h1>Gear items</h1>

<div id="gear_items" class="row d-flex justify-content-around align-items-center">
  <% @gear_items.each do |gear_item| %>
    <% if gear_item.borrower.blank? %> 
      <div class="col-md-3 col-sm-2 col-xs-1 d-flex text-center px-3 py-2 rounded">
        <%= render gear_item %>
      </div>
    <% end %>
  <% end %>
</div>  




    
  